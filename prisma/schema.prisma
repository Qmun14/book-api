// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id       String @id @default(uuid())
  title    String
  category String
  author   String
  year     Int
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  salt     String
}
